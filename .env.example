# LeasePilot - example env file
# Copy to .env and update values

# Server
PORT=3000
NODE_ENV=development

# Database (Postgres connection string)
DATABASE_URL=postgres://user:password@localhost:5432/leasepilot

# JWT secrets
JWT_SECRET=replace_this_with_a_strong_secret
JWT_REFRESH_SECRET=replace_this_with_a_second_strong_secret

# Cookie domain (for httpOnly cookies)
COOKIE_DOMAIN=localhost

# CORS - comma separated origins allowed in production
ALLOWED_ORIGINS=http://localhost:3000

# Rate limit (requests per minute)
RATE_LIMIT_MAX=60

# Stripe (for billing integration)
STRIPE_SECRET_KEY=sk_test_...

# Optional: set to "production" in prod
NODE_ENV=development
